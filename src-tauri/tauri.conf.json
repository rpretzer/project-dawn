{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../frontend",
    "distDir": "../frontend",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Project Dawn",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "sidecar": true,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.projectdawn.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/256x256.png",
        "icons/256x256@2x.png",
        "icons/512x512.png",
        "icons/512x512@2x.png"
      ],
      "resources": [
        "sidecar/project-dawn-server",
        "sidecar/project-dawn-server.sha256"
      ],
      "externalBin": [
        "bin/project-dawn-server"
      ],
      "copyright": "",
      "category": "Utility",
      "shortDescription": "Decentralized Multi-Agent Network",
      "longDescription": "Project Dawn - A decentralized multi-agent network with MCP protocol support",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": ""
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Project Dawn",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "systemTray": null
  }
}
